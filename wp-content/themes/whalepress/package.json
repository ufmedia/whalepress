{
  "name": "affinity-theme",
  "version": "2.0.0",
  "description": "NPM Scripts for the Affinity theme.",
  "engines": {
    "node": ">=22.0.0"
  },
  "type": "module",
  "scripts": {
    "build": "vite build --config vite.config.js",
    "build:watch": "vite build --watch --config vite.config.js",
    "dev": "webpack --mode development",
    "watch:scss": "node vite.scss-patch.js",
    "watch": "concurrently \"npm run watch:scss\" \"vite --host --config vite.config.js\"",
    "lint:js": "eslint 'src/js/**/*.js'",
    "lint:js:fix": "eslint 'src/js/**/*.js' --fix",
    "lint:php": "./includes/vendor/bin/phpcs --report-file=PHPCS-report.txt --ignore=*/vendor/*,tests,build,*/node_modules/* --extensions=php --standard=WordPress .",
    "lint:php:fix": "./includes/vendor/bin/phpcbf --ignore=*/vendor/*,tests,build,*/node_modules/* --extensions=php --standard=WordPress .",
    "lint:css": "stylelint 'src/scss/**/*.scss'",
    "lint:css:fix": "stylelint 'src/scss/**/*.scss' --fix"
  },
  "author": "John Thompson",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@tailwindcss/typography": "^0.5.16",
    "@tailwindcss/vite": "^4.1.12",
    "@wordpress/eslint-plugin": "^22.15.0",
    "autoprefixer": "^10.4.21",
    "concurrently": "^9.2.0",
    "eslint": "^9.33.0",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "postcss": "^8.5.6",
    "sass-embedded": "^1.90.0",
    "stylelint": "^16.23.1",
    "stylelint-config-standard-scss": "^15.0.1",
    "tailwindcss": "^4.1.12",
    "utopia-core-scss": "^1.3.0",
    "vite": "^7.1.3"
  },
  "dependencies": {
    "@fontsource/atkinson-hyperlegible": "^5.2.6",
    "chokidar": "^4.0.3"
  }
}
